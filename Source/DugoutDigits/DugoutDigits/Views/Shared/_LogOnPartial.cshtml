@if(Request.IsAuthenticated) {
    try {
        <text>Welcome @Request.Cookies["DD_name"].Value | @Html.ActionLink("Settings", "Edit", "Account") | @Html.ActionLink("Log Off", "LogOff", "Account")</text>
    } catch (Exception ex) {
        <text>@User.Identity.Name | @Html.ActionLink("Settings", "Edit", "Account") | @Html.ActionLink("Log Off", "LogOff", "Account")</text>
    }
}
else {
    @Html.ActionLink("Log On", "LogOn", "Account")
}
