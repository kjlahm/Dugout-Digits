<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/feedback.js")" type="text/javascript"></script>
</head>
<body>
    <div id="json-buffer"></div>
    <div id="topbar"></div>
    <div id="background"></div>
    <div class="page">

        <div id="header">
            <div id="title">
                <a href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/images/dugoutdigitslogo.png")" width="200px" height="70px" alt="DugoutDigits Logo" />
                </a>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>

        <div id="main" style="clear: both;">
            <div id="content">
                @RenderBody()
            </div>
        </div>

        <div id="footer">
            Copyright &copy; DugoutDigits 2012
        </div>

        <div id="submit-feedback" onclick="show_feedback_form()">
            <p style="margin:10px 20px;">Submit Feedback</p>
        </div>
        <div class="lightbox-black" id="lightbox-black-feedback" onclick='hide_feedback_form()'></div>
        <div class="lightbox-content" id="lightbox-content-feedback"></div>

    </div>
</body>
</html>
