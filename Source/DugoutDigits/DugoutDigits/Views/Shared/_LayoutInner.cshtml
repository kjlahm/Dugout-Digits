<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="json-buffer"></div>
    <div id="topbar"></div>
    <div id="background"></div>
    
    <div class="page">

        <div id="header">
            <div id="title">
                <a href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/images/dugoutdigitslogo.png")" width="200px" height="70px" />
                </a>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>

        <div id="main">
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Overview", "Index", "Overview")</li>
                    <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                    <li>@Html.ActionLink("Roster", "Index", "Roster")</li>
                    <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                    <li>@Html.ActionLink("Messages", "Index", "Messages")</li>
                </ul>
            </div>

            <div id="dropdown">
                Team Name
            </div>

            <div id="content">
                @RenderBody()
            </div>
        </div>

        <div id="footer">
        </div>
    </div>
</body>
</html>
